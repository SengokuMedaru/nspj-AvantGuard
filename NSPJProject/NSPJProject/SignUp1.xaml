                                       Name="GenderImage"
                                       Width="20"
                                       Visibility="Collapsed"></Image>
                            </StackPanel>-->

                            <!-- Button To Go To Sign Up 2/2 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 58 0 5"
                                        HorizontalAlignment="Center">
                                <Button Name="SignUp1NextButton"
                                        Content="Next"
                                        Foreground="#23aeff"
                                        Background="Transparent"
                                        BorderThickness="0 0 0 0"
                                        FontSize="20"
                                        FontFamily="Gulim"
                                        Margin="300 0 0 0" 
                                        Click="SignUp1NextButton_Click"></Button>
                            </StackPanel>
                        </StackPanel>



                    </Border>

                </StackPanel>

            </ScrollViewer>
        </Grid>

    </Border>
</Page>
